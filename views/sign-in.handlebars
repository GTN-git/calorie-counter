<div class="sign-in-container container justify-content-center">
    <div class="row w-100">
        <div class="col-lg-5 sign-in-center">
            <div class="card text-center">
                <h5 class="card-header">Login</h5>
                <div class="card-body">
                    <form class="login-form">
                        <div class="form-group row sign-in-input">
                            <label for="username">Username:</label>
                            <input type="text" class="form-control" id="username-login" name="username">
                        </div>
                        <div class="form-group row sign-in-input">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password-login" name="password">
                        </div>
                        <div class="form-group row">
                            <div class="container-flex">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2 text-center sign-in-center">
            <h3>or</h3>
        </div>
        <div class="col-lg-5 text-center sign-in-center">
            <h3>Get started with us today!</h3>
            <p>Sign up for an account:</p>
            <form action="/register" method="get">
                <button type="submit" class="btn btn-warning" href="/register">Create a new profile</button>
            </form>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>